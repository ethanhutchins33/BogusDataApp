@page "/people"
@inject DataGenerator Data

<h3>People</h3>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Street Address</th>
        <th>City</th>
        <th>State</th>
        <th>ZipCode</th>
        <th>Credit Rating</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var p in _people)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.Email</td>
                <td>@p.Phone</td>
                <td>@p.StreetAddress</td>
                <td>@p.City</td>
                <td>@p.State</td>
                <td>@p.ZipCode</td>
                <td>@p.Rating</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-outline-primary" @onclick="LoadData">LoadMoreData</button>

@code {
    List<PersonModel> _people = new();

    private void LoadData()
    {
        var results = Data.GeneratePeople().Take(10);

        _people.AddRange(results);
    }
}